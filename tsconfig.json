{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "src/**/*.spec.ts"]
}
